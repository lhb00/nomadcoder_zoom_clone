                        button#camera
                                    i(class="fa-solid fa-video fa-2x")
                                    i(class="fa-solid fa-arrow-right-arrow-left fa-2x")
                                    i(class="fa-solid fa-video-slash fa-2x")
                        select#cameras    
                    div
                        video#myFace(autoplay,playsinline, width="400", height="400")
